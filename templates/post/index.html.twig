{% extends 'base.html.twig' %}

{% block title %} {% endblock %}

{% block body %}
    <h1 class="title_admin">Liste des post !</h1>
    <a class="button_crud" href="{{ path('app_post_new') }}">Créer un post !</a>
    <a class="onglet" href="{{ path('app_comment_index') }}">Les commentaires</a>
    <a class="onglet_on" href="">Les posts</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Texte</th>
                <th>Image</th>
                <th>Crée le</th>
                <th>Mis à jour le</th>
                <th>Likes</th>
                <th>Catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td class="td_index">{{ post.id }}</td>
                <td class="td_index">{{ post.title }}</td>
                <td class="td_text td_index">{{ post.text }}</td>
                <td class="td_index">{{ post.imageName }}</td>
                <td class="td_index">{{ post.createdAt ? post.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                <td class="td_index">{{ post.updatedAt ? post.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
                <td class="td_index">{{ post.TotalLikes }}</td>
                <td class="td_index">{{ post.categorie }}</td>
                <td class="buttons_admin_wrapper">
                    <a class="button_admin" href="{{ path('app_post_show', {'id': post.id}) }}">Détails</a>
                    <a class="button_admin" href="{{ path('app_post_edit', {'id': post.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Pas de données</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
